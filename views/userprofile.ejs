<%-include("partials/header")-%>

<div class="col-md-6     pb-md-5 pt-0    pr-lg-5  pl-lg-5 text-right ">

   <h3 class="h1-responsive font-weight-bold">معلومات المتبرع </h3>
   <h2 dir="ltr"><%=_phoneNumber%></h2>
   <hr class="hr-light">

</div>
<div class="col-md-6    text-right">
   <form action="/userprofile" class="form  mr-md-0 mr-auto ml-auto pt-md-3" method="POST">

      <div class="input-group mb-3 ">
         <div class="input-group-prepend  w-100">
            <select dir="rtl" name="userType" class="custom-select custom-select-md  md-form colorful-select dropdown-primary">
               <option value="d">متبرع</option>
               <option value="p">مريض</option>
            </select>

            <span class="input-group-text    form-icon"><i class="fas fa-user  mr-auto ml-auto"></i></span>
         </div>
      </div>

      <div class="input-group mb-3 ">
         <div class="input-group-prepend  w-100">
            <select dir="rtl" name="bloodType" class="custom-select custom-select-md  md-form colorful-select dropdown-primary">

               <option value="A">A+</option>
               <option value="A-">A-</option>
               <option value="B+">B+</option>
               <option value="B-">B-</option>
               <option value="AB+">AB+</option>
               <option value="AB-">AB-</option>
               <option value="O+">O+</option>
               <option value="O-">O-</option>
            </select>

            <span class="input-group-text    form-icon"><i class="fas fa-user  mr-auto ml-auto"></i></span>
         </div>
      </div>

      <%- include("partials/wilaya") -%>
      <%- include("partials/captcha") -%>
      <button class="btn btn-danger btn-block" type="submit">تعديل</button>
   </form>
</div>

<%- include("partials/footer") -%>