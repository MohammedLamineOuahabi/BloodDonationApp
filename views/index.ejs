<%-include("partials/header")-%>
<main role="main">
    <div class="main-header ">
        <h1 class="main-title pt-3">منصة تبرع</h1>
        <h3 class="main-subtitle pb-3"> صِلَة المرضى بالمتبرعين بالدم</h3>
    </div>


    <form action="/" class="form-sign" method="POST">
        <h5 class="form-title mb-3">الرجاء تسجيل الدخول</h5>

        <input type="text" name="tel" id="tel" lang="en" dir="ltr" class="form-control mb-2" placeholder="رقم الهاتف"
            required autocomplete="off" autofocus onfocus="this.value=''">

        <input type="password" name="password" id="inputPassword" class="form-control mb-2" placeholder="الكود" required
            autocomplete="off" onfocus="this.value=''" maxlength="5">
        <input type="captcha" name="captcha" id="captcha" class="form-control mb-2" placeholder="5+9 =?" required
            autocomplete="off" autofocus onfocus="this.value=''" maxlength="5">

        <!--           <div class=" checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div> -->
        <button class="btn btn-md btn-default btn-block mb-3" type="submit">دخول</button>
        <div class="user-options">
            <p class="mb-1"> إنشاء <a href="/signin.html">حساب جديد</a></p>
            <p class="mb-1">استرجاع الكود <a href="/getcode.html">من هنا</a></p>
        </div>
    </form>
</main>
<%-include("partials/footer")-%>