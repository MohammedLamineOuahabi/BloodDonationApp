<%- include("partials/header") -%>
<main role="main">
    <div class="main-header ">
        <h1 class="main-title pt-3">منصة تبرع</h1>
        <h4 class="main-subtitle pb-3"> صِلَة المرضى بالمتبرعين بالدم</h4>
    </div>
    <form action="/" class="form-sign" method="POST">
        <h5 class="form-title mb-3">الرجاء تسجيل الدخول</h5>

        <input type="text" name="tel" id="tel" lang="en" dir="ltr" class="form-control mb-2" placeholder="رقم الهاتف"
            required autocomplete="off" autofocus onfocus="this.value=''">

        <input type="password" name="password" id="inputPassword" class="form-control mb-2" placeholder="الكود" required
            autocomplete="off" onfocus="this.value=''" maxlength="5">


        <button class="btn btn-md btn-default btn-block mb-3" type="submit" ">دخول</button>
    </form>
</main>
<%- include("partials/footer") -%>